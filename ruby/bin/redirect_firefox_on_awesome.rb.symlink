require 'selenium/webdriver'
require 'selenium/webdriver/firefox'


puts "firefox redirect enabled"

module Selenium
  module WebDriver
    module Firefox
      class Binary

        def execute_with_awesome_notification(*args)
          `echo "redirect_firefox_next_seconds(5)" | awesome-client &>/dev/null`
          execute_without_awesome_notification(*args)
        end
        alias_method_chain :execute, :awesome_notification

      end
    end
  end
end
